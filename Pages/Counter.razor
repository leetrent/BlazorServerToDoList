@page "/counter"

@using System;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    [Parameter]
    public int IncrementAmout { get; set; } = 1;

    private int currentCount = 0;

    void IncrementCount()
    {
        Console.WriteLine("");
        Console.WriteLine("[Counter.razor][IncrementCount] => (currentCount)(before): " + (currentCount));
        currentCount += IncrementAmout;
        Console.WriteLine("[Counter.razor][IncrementCount] => (currentCount)(after).: " + (currentCount));
    }
}
